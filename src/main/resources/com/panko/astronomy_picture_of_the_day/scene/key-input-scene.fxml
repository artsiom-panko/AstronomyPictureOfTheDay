<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="341.0" prefWidth="460.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.panko.astronomy_picture_of_the_day.controller.KeyInputController">
    <padding>
        <Insets left="20.0" right="20.0" />
    </padding>
   <HBox>
      <children>
          <Text stroke="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Welcome to Astronomy picture of the day">
              <font>
                  <Font name="System Bold" size="14.0" />
              </font>
            <HBox.margin>
               <Insets bottom="15.0" />
            </HBox.margin>
          </Text>
      </children>
   </HBox>
   <VBox>
      <children>
          <HBox prefHeight="0.0" prefWidth="420.0">
              <children>
               <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Key:">
                  <font>
                     <Font name="System Bold" size="12.0" />
                  </font>
               </Text>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Generate authentication API Key on NASA website" wrappingWidth="293.892578125">
                      <font>
                          <Font size="13.0" />
                      </font>
                      <HBox.margin>
                          <Insets left="10.0" />
                      </HBox.margin>
                  </Text>
                  <Hyperlink minHeight="-Infinity" prefHeight="22.0" prefWidth="92.0" text="api.nasa.gov/" textOverrun="CENTER_ELLIPSIS">
                      <font>
                          <Font name="System Bold" size="13.0" />
                      </font>
                  <HBox.margin>
                     <Insets />
                  </HBox.margin>
                  <padding>
                     <Insets top="-3.0" />
                  </padding>
                  </Hyperlink>
              </children>
          </HBox>
          <TextField fx:id="newApiKey" promptText="API key" />
      </children>
   </VBox>
    <HBox>
        <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Language:">
                <HBox.margin>
                    <Insets right="10.0" />
                </HBox.margin>
                <font>
                    <Font name="System Bold" size="12.0" />
                </font>
            </Text>
            <RadioButton mnemonicParsing="false" selected="true" text="EN">
                <HBox.margin>
                    <Insets />
                </HBox.margin>
            <toggleGroup>
                    <ToggleGroup fx:id="languageGroup" />
            </toggleGroup>
            </RadioButton>
            <RadioButton mnemonicParsing="false" text="RU" textAlignment="CENTER" toggleGroup="languageGroup">
            <HBox.margin>
               <Insets left="30.0" />
            </HBox.margin>
            </RadioButton>
        </children>
      <VBox.margin>
         <Insets top="10.0" />
      </VBox.margin>
    </HBox>
    <HBox>
        <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Folder for new images:">
                <font>
                    <Font name="System Bold" size="12.0" />
                </font>
                <HBox.margin>
                    <Insets right="10.0" />
                </HBox.margin>
            </Text>
            <Button minHeight="-Infinity" mnemonicParsing="false" onAction="#selectFolderDirectory" prefHeight="19.0" prefWidth="70.0" text="Browse">
            <font>
               <Font size="11.0" />
            </font>
            <padding>
               <Insets top="-1.0" />
            </padding></Button>
        </children>
      <VBox.margin>
         <Insets top="10.0" />
      </VBox.margin>
    </HBox>
   <TextField fx:id="selectedFolderDirectory" promptText="Path">
      <VBox.margin>
         <Insets top="-10.0" />
      </VBox.margin>
   </TextField>
    <Button alignment="BOTTOM_CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#saveNewApiKey" prefHeight="26.0" prefWidth="74.0" style="-fx-background-color: #5E92F9;" text="Accept" textFill="WHITE" textOverrun="CENTER_ELLIPSIS">
        <font>
            <Font name="System Bold" size="13.0" />
        </font>
      <VBox.margin>
         <Insets top="20.0" />
      </VBox.margin>
    </Button>
</VBox>
