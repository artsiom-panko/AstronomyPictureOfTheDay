<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.panko</groupId>
    <artifactId>AstronomyPictureOfTheDay</artifactId>
    <version>1.0</version>

    <properties>
        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>

        <app.name>Astronomy Picture Of The Day</app.name>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-controls</artifactId>
            <version>11</version>
        </dependency>
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-fxml</artifactId>
            <version>11</version>
        </dependency>

        <dependency>
            <groupId>org.json</groupId>
            <artifactId>json</artifactId>
            <version>20230227</version>
        </dependency>
        <!--        <dependency>-->
        <!--            <groupId>net.java.dev.jna</groupId>-->
        <!--            <artifactId>jna</artifactId>-->
        <!--            <version>5.12.1</version>-->
        <!--        </dependency>-->
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.10.1</version>
                <!--                <configuration>-->
                <!--                    <release>14</release>-->
                <!--                    <source>14</source>-->
                <!--                    <target>14</target>-->
                <!--                </configuration>-->
            </plugin>

            <!-- Build an executable JAR -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.0.2</version>
                <configuration>
                    <archive>
                        <manifest>
                            <addClasspath>true</addClasspath>
                            <classpathPrefix>lib/</classpathPrefix>
                            <mainClass>com.panko.astronomy_picture_of_the_day.MainApplication</mainClass>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.moditect</groupId>
                <artifactId>moditect-maven-plugin</artifactId>
                <version>1.0.0.RC3</version>

                <!-- Generating module-info.java descriptor -->
                <executions>
                    <execution>
                        <id>generate-module-info</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>generate-module-info</goal>
                        </goals>
                        <configuration>
                            <modules>
                                <!--                                <module>-->
                                <!--                                    <artifact>-->
                                <!--                                        <groupId>com.panko.astronomy_picture_of_the_day</groupId>-->
                                <!--                                        <artifactId>AstronomyPictureOfTheDay</artifactId>-->
                                <!--                                        <version>1.0</version>-->
                                <!--                                    </artifact>-->
                                <!--                                </module>-->
                                <module>
                                    <artifact>
                                        <groupId>org.json</groupId>
                                        <artifactId>json</artifactId>
                                        <version>20230227</version>
                                    </artifact>
                                    <moduleInfo>
                                        <name>org.json</name>
                                        <exports>
                                            com.panko.astronomy_picture_of_the_day;
                                            com.panko.astronomy_picture_of_the_day.entity;
                                            com.panko.astronomy_picture_of_the_day.service;
                                            com.panko.astronomy_picture_of_the_day.controller;
                                            com.panko.astronomy_picture_of_the_day.util;
                                        </exports>
                                        <requires>
                                            javafx.controls;
                                            javafx.fxml;
                                            javafx.graphics;
                                            org.json;
                                            java.desktop;
                                            java.net.http;
                                            com.sun.jna;
                                            java.prefs;
                                        </requires>
                                        <opens>
                                            com.panko.astronomy_picture_of_the_day to javafx.fxml;
                                            com.panko.astronomy_picture_of_the_day.controller to javafx.fxml;
                                            com.panko.astronomy_picture_of_the_day.service to javafx.fxml;
                                            com.panko.astronomy_picture_of_the_day.util to javafx.fxml;
                                        </opens>
                                    </moduleInfo>
                                </module>
<!--                                <module>-->
<!--                                    <artifact>-->
<!--                                        <groupId>org.openjfx</groupId>-->
<!--                                        <artifactId>javafx-graphics</artifactId>-->
<!--                                        <version>20</version>-->
<!--                                    </artifact>-->
<!--                                </module>-->
                            </modules>
                        </configuration>
                    </execution>

                    <!-- Adding a module descriptor to the project JAR -->
                    <execution>
                        <id>add-module-infos</id>
                        <phase>package</phase>
                        <goals>
                            <goal>add-module-info</goal>
                        </goals>
                        <configuration>
                            <!--                            <jdepsExtraArgs>&#45;&#45;multi-release</jdepsExtraArgs>-->
                            <!--                            <jvmVersion>11</jvmVersion>-->
                            <failOnWarning>true</failOnWarning>
                            <module>
                                <moduleInfo>
                                    <name>AstronomyPictureOfTheDay</name>
                                    <exports>
                                        *;
                                    </exports>
                                </moduleInfo>
                                <!--                                                    <moduleInfo>-->
                                <!--                                                        <name>org.json</name>-->
                                <!--                                                        <exports>-->
                                <!--                                                            *;-->
                                <!--                                                        </exports>-->
                                <!--                                                    </moduleInfo>-->
                            </module>
                        </configuration>
                    </execution>

                    <!-- Creating modular runtime images -->
                    <execution>
                        <id>create-runtime-image</id>
                        <phase>package</phase>
                        <goals>
                            <goal>create-runtime-image</goal>
                        </goals>
                        <configuration>
                            <modulePath>
                                <path>${project.build.directory}/modules/</path>
                            </modulePath>
                            <modules>
                                <module>AstronomyPictureOfTheDay</module>
                            </modules>
                            <outputDirectory>
                                ${project.build.directory}/jlink-image
                            </outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>

        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <targetPath>${project.build.outputDirectory}</targetPath>
            </resource>
        </resources>
    </build>

</project>